WindowManager:
    GeneratePassword:
    ReadFile:


<GeneratePassword>:
    name: "generate_password"

    password_length: password_length
    website: website
    email: email

    FloatLayout:
        cols: 1


        FloatLayout:
            size: root.width, root.height
            Label:
                text: "Generate Password"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (root.width**2 + root.height**2) / 14**4
            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8}
                font_size: (root.width**2 + root.height**2) / 14**4
                text: "Password Length:\n  Numbers only!"

            TextInput:
                pos_hint: {"x":0.5, "top":0.8}
                size_hint: 0.4, 0.12
                font_size: (root.width**2 + root.height**2) / 14**4
                id: password_length
                multiline: False

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13}
                font_size: (root.width**2 + root.height**2) / 14**4
                text: "Website:"
            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13}
                size_hint: 0.4, 0.12
                id: website
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13*2}
                font_size: (root.width**2 + root.height**2) / 14**4
                text: "E-mail:"
            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13*2}
                size_hint: 0.4, 0.12
                id: email
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

        Button:
            size_hint: 0.4, 0.1
            pos_hint:{"x":0.3,"y":0.25}
            color: 0.4,0.5,1
            background_color: 0.1, 0.5, 0.7
            text: "Find Password"
            font_size: (root.width**2 + root.height**2) / 15**4
            on_press:
                app.root.current = "search"
                root.manager.transition.direction = 'right'


        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.15
            color: 0.4,0.5,1
            background_color: 0.1, 0.5, 0.7
            text: "Generate"
            font_size: (root.width**2 + root.height**2) / 13**4
            on_press:
                root.generate_password()
                root.write_to_file()




<ReadFile>:
    name: "search"
    website: website

    FloatLayout:

        Label:
            text: "Search for website"
            size_hint: 0.8, 0.2
            pos_hint: {"x":0.1, "top":1}
            font_size: (root.width**2 + root.height**2) / 14**4

        Label:
            size_hint: 0.5,0.12
            pos_hint: {"x":0, "top":0.8}
            font_size: (root.width**2 + root.height**2) / 14**4
            text: "Website:"

        TextInput:
            pos_hint: {"x":0.5, "top":0.8}
            size_hint: 0.4, 0.12
            font_size: (root.width**2 + root.height**2) / 14**4
            id: website
            multiline: False

    Button:
        pos_hint:{"x":0.2,"y":0.05}
        font_size: (root.width**2 + root.height**2) / 13**4
        size_hint: 0.6, 0.2
        color: 0.4, 0.5, 1
        background_color: 0.1, 0.5, 0.7
        text: "Search"
        on_press:
            root.read()
            root.show_result()

    Button:
        pos_hint:{"x":0.3,"y":0.3}
        font_size: (root.width**2 + root.height**2) / 15**4
        size_hint: 0.4, 0.1
        color: 0.4, 0.5, 1
        background_color: 0.1, 0.5, 0.7
        text: "Go Back"
        on_press:
            app.root.current = "generate_password"
            root.manager.transition.direction = 'left'

